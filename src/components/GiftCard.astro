---
export interface Props {
  gift: {
    id: number;
    name: string;
    description: string;
    price: number;
    category: string;
    gender: string;
    ageRange: string;
    type: string;
    image: string;
    link?: string;
  };
}

const { gift } = Astro.props;

function formatPrice(price: number): string {
  return new Intl.NumberFormat('es-CL', {
    style: 'currency',
    currency: 'CLP',
    minimumFractionDigits: 0
  }).format(price);
}
---

<div class="gift-card" data-category={gift.category} data-type={gift.type}>
  <div class="gift-image">
    <img src={gift.image} alt={gift.name} loading="lazy" />
    <div class="gift-overlay">
      <span class="gift-type">{gift.type}</span>
      {gift.type === 'personalizado' && (
        <span class="personalized-badge">‚ú® Personalizable</span>
      )}
    </div>
  </div>
  
  <div class="gift-content">
    <div class="gift-header">
      <h3 class="gift-title">{gift.name}</h3>
      <span class="gift-price">{formatPrice(gift.price)}</span>
    </div>
    
    <p class="gift-description">{gift.description}</p>
    
    <div class="gift-tags">
      <span class="tag category-tag">{gift.category}</span>
      <span class="tag gender-tag">{gift.gender}</span>
      <span class="tag age-tag">{gift.ageRange} a√±os</span>
    </div>
    
    <div class="gift-actions">
      {gift.link ? (
        <a href={gift.link} target="_blank" rel="noopener" class="btn btn-primary">
          Ver en Sanjigen üé®
        </a>
      ) : (
        <button class="btn btn-secondary">Ver Detalles</button>
      )}
      <button class="btn btn-outline">‚ù§Ô∏è Guardar</button>
    </div>
  </div>
</div>

<style>
  .gift-card {
    background: white;
    border-radius: 20px;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
    overflow: hidden;
    transition: all 0.3s ease;
    height: 100%;
    display: flex;
    flex-direction: column;
  }

  .gift-card:hover {
    transform: translateY(-10px);
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.15);
  }

  .gift-image {
    position: relative;
    height: 250px;
    overflow: hidden;
  }

  .gift-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .gift-card:hover .gift-image img {
    transform: scale(1.1);
  }

  .gift-overlay {
    position: absolute;
    top: 15px;
    left: 15px;
    right: 15px;
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
  }

  .gift-type {
    background: rgba(0, 0, 0, 0.7);
    color: white;
    padding: 5px 12px;
    border-radius: 20px;
    font-size: 12px;
    font-weight: bold;
    text-transform: capitalize;
  }

  .personalized-badge {
    background: linear-gradient(45deg, #ff6b6b, #feca57);
    color: white;
    padding: 5px 12px;
    border-radius: 20px;
    font-size: 12px;
    font-weight: bold;
    animation: pulse 2s infinite;
  }

  @keyframes pulse {
    0% { transform: scale(1); }
    50% { transform: scale(1.05); }
    100% { transform: scale(1); }
  }

  .gift-content {
    padding: 25px;
    flex: 1;
    display: flex;
    flex-direction: column;
  }

  .gift-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 15px;
  }

  .gift-title {
    font-size: 1.3rem;
    font-weight: bold;
    color: #2c3e50;
    margin: 0;
    flex: 1;
    margin-right: 15px;
    line-height: 1.3;
  }

  .gift-price {
    font-size: 1.2rem;
    font-weight: bold;
    color: #27ae60;
    background: rgba(39, 174, 96, 0.1);
    padding: 5px 12px;
    border-radius: 15px;
    white-space: nowrap;
  }

  .gift-description {
    color: #7f8c8d;
    line-height: 1.5;
    margin-bottom: 20px;
    flex: 1;
  }

  .gift-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 8px;
    margin-bottom: 20px;
  }

  .tag {
    padding: 4px 10px;
    border-radius: 12px;
    font-size: 12px;
    font-weight: 500;
    text-transform: capitalize;
  }

  .category-tag {
    background: rgba(52, 152, 219, 0.1);
    color: #3498db;
  }

  .gender-tag {
    background: rgba(155, 89, 182, 0.1);
    color: #9b59b6;
  }

  .age-tag {
    background: rgba(230, 126, 34, 0.1);
    color: #e67e22;
  }

  .gift-actions {
    display: flex;
    gap: 10px;
    margin-top: auto;
  }

  .btn {
    padding: 12px 20px;
    border: none;
    border-radius: 25px;
    font-weight: bold;
    cursor: pointer;
    transition: all 0.3s ease;
    text-decoration: none;
    text-align: center;
    font-size: 14px;
    flex: 1;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 5px;
  }

  .btn-primary {
    background: linear-gradient(45deg, #3498db, #2980b9);
    color: white;
  }

  .btn-primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 5px 15px rgba(52, 152, 219, 0.4);
  }

  .btn-secondary {
    background: linear-gradient(45deg, #95a5a6, #7f8c8d);
    color: white;
  }

  .btn-secondary:hover {
    transform: translateY(-2px);
    box-shadow: 0 5px 15px rgba(149, 165, 166, 0.4);
  }

  .btn-outline {
    background: transparent;
    color: #e74c3c;
    border: 2px solid #e74c3c;
    flex: 0 0 auto;
    padding: 10px 15px;
  }

  .btn-outline:hover {
    background: #e74c3c;
    color: white;
    transform: translateY(-2px);
  }

  @media screen and (max-width: 768px) {
    .gift-actions {
      flex-direction: column;
    }

    .btn-outline {
      flex: 1;
    }

    .gift-header {
      flex-direction: column;
      align-items: flex-start;
      gap: 10px;
    }

    .gift-title {
      margin-right: 0;
    }
  }
</style>